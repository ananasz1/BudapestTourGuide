<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dark</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/image_margin</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="card_description">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:layout_weight">2</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="card_location">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dark</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/card_background</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="tab_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
